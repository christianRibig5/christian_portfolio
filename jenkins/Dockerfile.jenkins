FROM jenkins/jenkins:lts

USER root

# Install Node.js & npm (v18)
RUN curl -fsSL https://deb.nodesource.com/setup_18.x | bash - && \
    apt-get update && \
    apt-get install -y nodejs && \
    npm install -g npm && \
    ln -s /usr/bin/node /usr/local/bin/node && \
    ln -s /usr/bin/npm /usr/local/bin/npm

# Verify
RUN node -v && npm -v

USER jenkins
