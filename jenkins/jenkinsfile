pipeline {
    agent any

    environment {
        // Optional defaults or fallback values if needed
        // EXAMPLE_API_KEY = credentials('my-api-key-id')  // From Jenkins credentials store
    }

    stages {
        stage('Cleanup Workspace') {
            steps {
                deleteDir()
            }
        }

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Load Env') {
            steps {
                script {
                    def envFile = readFile('.env')
                    def lines = envFile.split('\n')
                    lines.each { line ->
                        if (line.trim() && !line.trim().startsWith('#')) {
                            def parts = line.split('=')
                            if (parts.length == 2) {
                                def key = parts[0].trim()
                                def value = parts[1].trim()
                                env."${key}" = value
                            } else {
                                echo "âš ï¸ Invalid line in .env file: ${line}"
                            }
                        }
                    }
                }
            }
        }

        stage('Build') {
            steps {
                script {
                    sh 'echo ğŸ” Checking Docker access...'
                    sh 'docker version || echo "âŒ Docker is not accessible"'
                    sh 'chmod +x scripts/buildmyportfolio.sh'
                    sh './scripts/buildmyportfolio.sh'
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                script {
                    sh 'echo ğŸš€ Deploying to Kubernetes...'
                    sh 'kubectl apply -f k8s/deployment.yml --validate=false'
                }
            }
        }

        stage('Ansible Post Deploy Config') {
            steps {
                script {
                    sh 'echo ğŸ”§ Running Ansible post-deploy configuration...'
                    sh 'ansible-playbook ansible/deploy.yml'
                }
            }
        }
    }

    post {
        always {
            echo 'ğŸ“¦ Pipeline completed.'
        }
        success {
            echo 'âœ… Deployment succeeded.'
        }
        failure {
            echo 'âŒ Deployment failed. Please check logs.'
        }
    }
}
