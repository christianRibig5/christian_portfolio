pipeline {
    agent any

    stages {
        stage('Debug Workspace') {
            steps {
                script {
                    echo "ğŸ” Listing workspace files..."
                    sh 'ls -la'
                    sh 'git status || echo "âš ï¸ Not a Git repo"'
                    sh 'cat jenkinsfile || echo "âš ï¸ jenkinsfile not found"'
                }
            }
        }

        stage('Load .env Variables') {
            steps {
                script {
                    echo "ğŸ”‘ Loading environment variables from .env"
                    def envFile = readFile('.env')
                    def lines = envFile.split('\n')
                    for (line in lines) {
                        if (line.trim() && !line.startsWith('#')) {
                            def (key, value) = line.split('=', 2)
                            env."${key.trim()}" = value.trim()
                        }
                    }
                }
            }
        }

        stage('Build') {
            steps {
                script {
                    echo "ğŸ”§ Building the React app..."
                    sh 'docker version || echo "âŒ Docker is not accessible from Jenkins"'
                    sh 'chmod +x scripts/buildmyportfolio.sh'
                    sh './scripts/buildmyportfolio.sh'
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                echo "ğŸš€ Deploying to Kubernetes"
                sh 'kubectl apply -f k8s/deployment.yml --validate=false'
            }
        }

        stage('Ansible Post Deploy Config') {
            steps {
                echo "ğŸ”§ Running Ansible playbook for post-deploy config"
                sh 'ansible-playbook ansible/deploy.yml'
            }
        }
    }
}
