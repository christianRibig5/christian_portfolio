pipeline {
    agent{
         docker {

             image 'my-jenkins-devops:latest'
             args '-v /my/custom/workspace:/var/jenkins_home/workspace'
        }
    }
    environment {
        KUBECONFIG = '/root/.kube/config'
    }
    stages {
        stage('Checkout') {
            steps {
                // Clean up and immediately checkout the repo
                deleteDir()
                checkout scm
            }
        }

        stage('Load Environment Variables') {
            steps {
                script {
                    def envFile = readFile('.env')
                    def lines = envFile.split('\n')
                    for (line in lines) {
                        if (line.trim() && !line.startsWith('#')) {
                            def (key, value) = line.split('=')
                            env."${key}" = value
                        }
                    }
                }
            }
        }

        stage('Build') {
            steps {
                script {
                    sh 'docker version || echo "‚ùå Docker is not accessible"'
                    sh 'chmod +x scripts/buildmyportfolio.sh'
                    sh './scripts/buildmyportfolio.sh'
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                sh 'kubectl config current-context'       // (debug: optional)
                sh 'kubectl get pods'                    // (debug: optional)
                sh 'kubectl apply -f k8s/deployment.yml --validate=false'
            }
        }

        stage('Ansible Post Deploy Config') {
            steps {
                sh 'ansible-playbook ansible/deploy.yml'
            }
        }
    }
     post {
        always {
            echo 'Cleaning up workspace...'
            deleteDir() // jenkins build workpspace wipe
            sh "rm -rf node_modules || true" // Prevents npm cache lock
        }
        failure {
            echo 'Build failed!'
        }
        success {
            echo 'Build succeeded!'
        }
    }
}

