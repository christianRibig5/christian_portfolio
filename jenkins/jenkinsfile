pipeline {
    agent {
        docker {
            image 'my-jenkins-devops:latest'
            args '--entrypoint /bin/bash' // safer entrypoint
        }
    }

    environment {
        KUBECONFIG = '/root/.kube/config'
    }

    stages {
        stage('Checkout') {
            steps {
                deleteDir()
                checkout scm
            }
        }

        stage('Build and Deploy') {
            steps {
                script {
                    echo 'âœ… Loading environment variables...'
                    def envFile = readFile('.env')
                    envFile.split('\n').each {
                        if (it && !it.startsWith('#')) {
                            def (k, v) = it.split('=')
                            env["${k}"] = v
                        }
                    }

                    echo 'ðŸš€ Building portfolio app...'
                    sh 'ls -l scripts/'
                    sh 'chmod +x scripts/buildmyportfolio.sh'
                    sh './scripts/buildmyportfolio.sh'
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                sh 'kubectl config current-context'
                sh 'kubectl get pods'
                sh 'kubectl apply -f k8s/deployment.yml --validate=false'
            }
        }

        stage('Ansible Post Deploy Config') {
            steps {
                sh 'ansible-playbook ansible/deploy.yml'
            }
        }
    }

    post {
        always {
            echo 'Cleaning up workspace...'
            deleteDir()
        }
        failure {
            echo 'Build failed!'
        }
        success {
            echo 'Build succeeded!'
        }
    }
}
