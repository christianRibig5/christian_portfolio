pipeline {
    agent any

    environment {
        DOTENV = readFile('.env').split('\n')
    }

    stages {
        stage('Build') {
            steps {
                script {
                  // Test Docker access before running the build
                    sh 'echo üîç Checking Docker access...'
                    sh 'docker version || echo ‚ùå Docker is not accessible from Jenkins'
                    sh 'chmod +x scripts/buildmyportfolio.sh'
                    sh '''
                        . /etc/profile
                        bash ./scripts/buildmyportfolio.sh
                    '''
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                sh 'kubectl apply -f k8s/deployment.yml --validate=false'
            }
        }

        stage('Ansible Post Deploy Config') {
            steps {
                sh 'ansible-playbook ansible/deploy.yml'
            }
        }
    }
}



stage('Build') {
    steps {
        script {
            // Test Docker access before running the build
            sh 'echo üîç Checking Docker access...'
            sh 'docker version || echo ‚ùå Docker is not accessible from Jenkins'
            sh 'chmod +x scripts/buildmyportfolio.sh'
            sh '''
                . /etc/profile
                bash ./scripts/buildmyportfolio.sh
            '''
        }
    }
}
